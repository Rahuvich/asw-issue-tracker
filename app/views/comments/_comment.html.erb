

<%= "Comment".pluralize(@comments.count) %> (<%= @comments.count %>)
<br>
<% @comments.each do |comment|%>
<div class="container my-3">
    <div class="row">
        <div class="col-1">
            <% if comment.has_attribute?(:user_id) and comment.user != nil %>
                <img class="user-image" src ="<%=comment.user.imageurl%>">
            <% end %>
        </div>

        <div class="col-11">
            <% if comment.has_attribute?(:user_id) and comment.user != nil %>
            <span class="user-name"><%= @issue.user.name %> </span>
            <% else %>
                <b> !!!! ERROR ACTUALIZA EL PROYECTO O COMUNICATE CONMIGO !!!!: </b> 
            <% end %>

            <p> <%= comment.content %></p>
            <% if current_user == comment.user %>
                <%= link_to "Edit", edit_issue_comment_path(comment.issue, comment), :class=>"button-secondary"%>
                •
                <%= link_to "Delete", [comment.issue, comment], method: :delete, :class=>"button-secondary"%>
                •
                <span class="time-ago"><%= time_ago_in_words(comment.created_at)%></span>
                <br>
            <% else%>
                <span class="time-ago"><%= time_ago_in_words(comment.created_at)%></span>
            <% end%>
        </div>
    </div>
</div>
<% end %>