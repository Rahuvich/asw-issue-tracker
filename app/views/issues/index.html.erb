<p id="notice"><%= notice %></p>

<h1>Issues</h1>

  <div class="filter-container">
    <p class="filter-label">Filter by:</p>
    <ul class="filter-status">
      <li id="all" aria-pressed="true">
        <a href="/issues">All</a>
      </li>
      <li id="open">
        <a href="/issues?status=new&amp;status=open">Open</a>
      </li>
      <li id="myissues">
        <a href="/issues?user_id="+current_user.id>My issues</a>
      </li>
      
    </ul>
  </div>
  
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Kind</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Assignee</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.kind %></td>
        <td><%= issue.priority %></td>
        <td><%= issue.status %></td>
        <td><%= issue.assignee %></td>
        <td><%= time_ago_in_words(issue.created_at) + " ago" %></td>
        <td><%= time_ago_in_words(issue.updated_at) + " ago" %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
